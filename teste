---Janelas Corrida ---
local Races = Window:MakeTab({
	Name = "Races",
	Icon = "",
	PremiumOnly = false
})
local Section = Races:AddSection({
	Name = "Insta Win Races"
})

Races:AddButton({
	Name = "Win Grassland",
	Callback = function()
      		_G.RaceWin = 1
            TeleportRaces()
  	end    
})

Races:AddButton({
	Name = "Win Desert",
	Callback = function()
      		_G.RaceWin = 2
            TeleportRaces()
  	end    
})

Races:AddButton({
	Name = "Win Magma",
	Callback = function()
      		_G.RaceWin = 3
            TeleportRaces()
  	end    
})
